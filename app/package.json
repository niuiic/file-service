    "db:restore": "drizzle-kit push",
    "db:restore:mock": "MODE=mock drizzle-kit push",
    "debug": "nest start",
    "debug:mock": "MODE=mock nest start"
  },
  "dependencies": {
    "@fastify/multipart": "^9.0.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "^10.4.15",
    "drizzle-orm": "^0.38.3",
    "ioredis": "^5.4.2",
    "json-bigint": "^1.0.0",
    "minio": "^8.0.3",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "snowflake-id": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@swc/cli": "0.5.2",
    "@swc/core": "^1.10.4",
    "@types/json-bigint": "^1.0.4",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.30.1",
    "fastify": "^5.2.0",
    "supertest": "^7.0.0",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.8"
  }
