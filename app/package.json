{
  "name": "app",
  "version": "0.1.0",
  "scripts": {
    "start:dev": "nest start --watch",
    "start:mock": "MODE=mock nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsx build.ts",
    "db:store": "drizzle-kit pull",
